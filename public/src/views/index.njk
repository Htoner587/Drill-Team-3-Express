{% extends  "layout.html" %}

{% block title %}
Courses
{% endblock %}

{% block header %}
All Available Courses
{% endblock %}

{% block  content %}
<table class = "table">
    <thead>
    <tr>
        <th>Course Title</th>
        <th>Date</th>
        <th>Location</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for course in courses%}
    <tr>
        <td>{{course.courseName}}</td>
        <td>{{course.courseDate}}</td>
        <td>{{course.courseLocation}}</td>
        <td><a href="/course-info/{{course.courseID}}">More Details</a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}