{% extends  "layout.html" %}
{% block  content %}

<h1 class="display-2 text-center">Create a course</h1>

{% if errormessage %}
 <p class="text-danger"> an error has occured in the form</p>
{% endif %}

<form action="" method="POST">
<div class="form-group">

        <div class="form-group">
          <label class="label label-default" for="title">Title</label>
          <input type="text" id="title" name="title" class="form-control">
        <div>

        <label class="label label-default" for="courseDate">Course Date</label>
        <input type="date" id="courseDate" name="courseDate" class="form-control">
        
        <label class="label label-default"  for="locationID">Location</label>
        <br>
        <select class="custom-select" name="locationID" id="locationID">
          <option selected>Open this select menu</option>
          <option value="Belfast">Belfast</option>
          <option value="Gdansk">Gdansk</option>
          <option value="Dublin">Dublin</option>
          <option value="Derry-Londonderry">Derry</option>
          <option value="London">London</option>
          <option value="Amsterdam">Amsterdam</option>
          <option value="Frankfurt">Frankfurt</option>
          <option value="Boston">Boston</option>
        </select> 

        <label class="label label-default"  for="description">Description</label>
        <input type="text" id="description" name="description" class="form-control">
        
        <label class="label label-default"  for="trainerNames">Training names</label>
        <input type="text" id="trainerNames" name="trainerNames" class="form-control">
        
        <label class="label label-default"  for="attendeesInfo">Info about attendees</label>
        <input type="text" id="attendeesInfo" name="attendeesInfo" class="form-control">
        
        <label class="label label-default"  for="courseDuration">Duration of the course</label>
        <input type="time" step="1" id="courseDuration" name="courseDuration" class="form-control">  
  </div>
      <div class="text-center mt-4">
        <input type="submit" class="btn btn-dark btn-lg" value="Submit">
      </div>
  </form>
{% endblock %}